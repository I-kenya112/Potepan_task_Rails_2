<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="container">
  <h2>アカウント設定</h2>
  <div class="row">
      <div class="col-md-3">
      <p>プロフィール画像</p>
    </div>
    <div class="field col-md-9">

      <%= form_with(model: current_user, url: user_registration_path, method: :put, local: true, multipart: true) do |form| %>
        <%= form.file_field :icon, direct_upload: true, prefix: 'image/profile/' %>
        <%= form.submit %>
      <% end %>


    </div>
    <div class="col-md-3">
      <p>名前</p>
    </div>
    <div class="field col-md-9">
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>
    <div class="col-md-3">
      <p>メールアドレス</p>
    </div>
    <div class="field col-md-9">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="col-md-3">
      <p>パスワード</p>
    </div>
    <div class="field col-md-9">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <div class="col-md-3">
      <p>パスワード確認</p>
    </div>
    <div class="field col-md-9">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <div class="col-md-3">
      <p>現在のパスワード</p>
    </div>
    <div class="field col-md-9">
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
<% end %>

    <h3>アカウントを削除しますか？</h3>
    <div><%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "アカウントを削除しますがよろしいですか？", turbo_confirm: "アカウントを削除しますがよろしいですか？" }, method: :delete %></div>
    <%= link_to "Back", :back %>
  </div>
</div>
