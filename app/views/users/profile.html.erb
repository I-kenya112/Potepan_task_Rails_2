<div class="container">
  <h2>プロフィール</h2>
  <div class="row">
    <div class="col-md-3">
      <p>プロフィール画像</p>
    </div>
    <div class="col-md-9">
      <% if @user.icon.attached? %>
        <%= image_tag url_for(@user.icon.variant(resize: "200x200")), class: "img-fluid" %>
      <% else %>
        <%= image_tag 'homes/default-icon.png', class: "img-fluid" %>
      <% end %>
    </div>
    <div class="col-md-3">
      <p>名前</p>
    </div>
    <div class="col-md-9">
      <div class="mb-3">
        <%= @user.name %>
      </div>
    </div>
    <div class="col-md-3">
      <p>自己紹介</p>
    </div>
    <div class="col-md-9">
      <div class="mb-3">
        <%= @user.introduction %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <h2>プロフィール編集</h2>
  <%= form_for(@user, url: profile_user_path(@user), method: :put) do |f| %>
    <div class="mb-3">
      <%= f.label :名前 %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :自己紹介 %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :icon, "プロフィール画像" %>
      <%= f.file_field :icon, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>






