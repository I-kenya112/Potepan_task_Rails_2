<%= render "shared/error", obj: @room %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h2>施設情報の編集</h2>

      <%= form_with model: @room, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :room_name, "施設名", class: "form-label" %>
          <%= f.text_field :room_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_intro, "施設詳細", class: "form-label" %>
          <%= f.text_area :room_intro, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_price, "料金", class: "form-label" %>
          <%= f.text_field :room_price, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_address, "住所", class: "form-label" %>
          <%= f.text_field :room_address, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_image, "施設画像", class: "form-label" %>
          <%= f.file_field :room_image, class: "form-control" %>
        </div>

        <div class="text-end">
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>