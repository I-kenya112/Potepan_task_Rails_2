<%= render "shared/error", obj: @room %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">

      <h3 class="mb-4">施設情報の登録</h3>

      <%= form_with model: @room, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :room_name, "施設名" %>
          <%= f.text_field :room_name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_intro, "施設詳細" %>
          <%= f.text_area :room_intro, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_price, "料金" %>
          <%= f.text_field :room_price, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_address, "住所" %>
          <%= f.text_field :room_address, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :room_image, "施設画像" %>
          <%= f.file_field :room_image, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit "保存", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>