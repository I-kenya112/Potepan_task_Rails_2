<%= render "shared/error", obj: @room %>

<div class="row">
  <div class="col-md-6 offset-md-3">

    <h3>新規作成</h3>

    <%= form_with model: @room, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :room_name, "施設名" %></th>
          <td><%= f.text_field :room_name %></td>
        </tr>

        <tr>
          <th><%= f.label :room_intro, "施設詳細" %></th>
          <td><%= f.text_area :room_intro %></td>
        </tr>

        <tr>
          <th><%= f.label :room_price, "料金" %></th>
          <td><%= f.text_field :room_price %></td>
        </tr>

        <tr>
          <th><%= f.label :room_address, "住所" %></th>
          <td><%= f.text_field :room_address %></td>
        </tr>

        <tr>
          <th><%= f.label :image, "施設画像" %></th>
          <td><%= f.file_field :image, autofocus: true %></td>
        </tr>
      </table>

      <div>
        <ul>
          <li><%= f.submit "保存"%></li>
          <li><%= link_to "キャンセル", :own_rooms %></li>
        </ul>
      </div>
    <% end %>

  </div>
</div>
